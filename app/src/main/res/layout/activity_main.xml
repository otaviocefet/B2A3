<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/multiplicar"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:backgroundTintMode="add"
        android:drawableTint="#F44336"
        android:foregroundTint="#F44336"
        android:onClick="multiplicar"
        android:text="Multiplicar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#3E1717"
        android:textSize="20sp"
        app:icon="@color/design_default_color_error"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#F44336" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="sans-serif-thin"
        android:text="Calculadora"
        android:textColor="#FFC107"
        android:textSize="50dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="261dp"
        android:layout_height="125dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="119dp"
        android:fontFamily="sans-serif"
        android:text="BigInt"
        android:textColor="#FAD000"
        android:textSize="95dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/somar"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:backgroundTintMode="add"
        android:drawableTint="#F44336"
        android:foregroundTint="#F44336"
        android:onClick="somar"
        android:text="Somar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#3E1717"
        android:textSize="20sp"
        app:icon="@color/white"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#F44336" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="58dp"
        android:text="Aguardando resultado..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Valor_Primeiro"
        android:layout_width="343dp"
        android:layout_height="64dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:hint="Informe o primeiro valor:"
        android:inputType="number|phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Valor_Segundo"
        android:layout_width="343dp"
        android:layout_height="64dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:hint="Informe o segundo valor::"
        android:inputType="number|phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>